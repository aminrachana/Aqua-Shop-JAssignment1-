mixin main-nav(activeRoute)
  div(class="navbar-nav mr-auto")
    a(
      href="/"
      class="nav-link",
      class=`${activeRoute === "/" && "router-link-exact-active"}`
    ) Home
    a(
      href="/about"
      class="nav-link",
      class=`${activeRoute === "/about" && "router-link-exact-active"}`
    ) About
    a(
      href="/products"
      class="nav-link",
      class=`${activeRoute === "/products" && "router-link-exact-active"}`
    ) Products
